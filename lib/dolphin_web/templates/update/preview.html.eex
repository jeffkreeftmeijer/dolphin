<h1>Update preview</h1>

 <%= if @twitter do %>
   <h2>Twitter</h2>
   <%= render "update_preview.html", %{update: @twitter} %>
 <% end %>

 <%= if @mastodon do %>
   <h2>Mastodon</h2>
   <%= render "update_preview.html", %{update: @mastodon} %>
 <% end %>

<h2>Github</h2>
<pre><%= @github.content %></pre>

<%= form_for @conn, Routes.update_path(@conn, :create), [as: :update], fn f -> %>
  <%= hidden_input f, :in_reply_to %>
  <%= hidden_input f, :text %>
  <%= submit "Post!" %>
<% end %>
